{
  "root": true,
  "plugins": ["prettier", "jest"],
  "extends": ["eslint:recommended", "standard", "prettier", "prettier/react"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["off"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "prefer-rest-params": ["warn"],
    "prefer-spread": ["warn"],
    "prefer-template": ["warn"],
    "camelcase": ["warn"]
  }
}
